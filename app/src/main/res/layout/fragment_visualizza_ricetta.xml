<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.VisualizzaRicettaFragment">

    </LinearLayout>

    <FrameLayout
        android:id="@+id/listaFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:id="@+id/scrollvr"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_anchor="@+id/linearLayout2"
        app:layout_anchorGravity="center">

        <LinearLayout
            android:id="@+id/nuova_ricetta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".VisualizzaRicetta">

            <TextView
                android:id="@+id/nomecocktail"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/fotodeldrink"
                android:layout_width="250dp"
                android:layout_height="201dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:background="#ced4da"
                android:padding="0dp"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/fav_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_favorite_border_24" />

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                android:background="#FFFFFF"
                android:src="@drawable/ic_difficolta" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="-25dp"
                android:text="DifficoltÃ : "
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/difficolta"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="-31dp"
                android:layout_marginEnd="21dp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="35dp"
                android:text="Ingredienti:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/visualizza_ingredienti"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:divider="#FFFFFF"
                android:nestedScrollingEnabled="true" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="35dp"
                android:text="Descrizione:"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/visualizza_descrizione"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:divider="#FFFFFF"
                android:dividerHeight="3dp"
                android:nestedScrollingEnabled="true" />

            <ImageButton
                android:id="@+id/tornaIndietro"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_logout"
                android:src="@drawable/ic_return" />

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>